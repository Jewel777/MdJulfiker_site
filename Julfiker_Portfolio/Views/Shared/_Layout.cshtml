@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Md Julfiker Ali Jewel Portfolio Website" />
    <title>@ViewData["Title"] - Md Julfiker Ali Jewel Portfolio</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Poppins:wght@500&display=swap" rel="stylesheet" />
    <!-- Custom CSS (cache-busted) -->
    <link href="~/css/site.css?v=6" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <!-- SEO: JSON-LD (Razor-safe with @@ escapes) -->
    <script type="application/ld+json">
    {
      "@@context":"https://schema.org",
      "@@type":"Person",
      "name":"Md Julfiker Ali Jewel",
      "url":"https://www.mdjulfikeralijewel.com",
      "image":"https://www.mdjulfikeralijewel.com/images/jewel-profile.jpg",
      "jobTitle":"Software Programmer Analyst",
      "worksFor":{
        "@@type":"Organization",
        "name":"West Virginia Department of Health and Human Resources"
      },
      "sameAs":[
        "https://www.linkedin.com/in/md-julfiker-ali-jewel-7b1442a9/",
        "https://x.com/JewelShaikh2",
        "https://github.com/Jewel777",
        "https://www.youtube.com/@@nongor3694",
        "https://scholar.google.com/citations?user=KYHGDlgAAAAJ",
        "https://orcid.org/0009-0004-8799-8957"
      ]
    }
    </script>
</head>

<body class="liquid-body">
    <!-- Spinner (visible briefly, then hidden by script) -->
    <div id="loading-spinner" class="spinner-wrapper">
        <div class="spinner"></div>
    </div>

    <!-- Background layers -->
    <div class="bg-gradient"></div>
    <div class="bg-blobs" aria-hidden="true"></div>

    <!-- Particles Background (kept) -->
    <div id="particles-js"></div>

    <div class="wrapper position-relative">

        <!-- Navbar -->
        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark fixed-top glass-navbar liquid-nav">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">MJAJ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav text-center glass-tabs">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/" || Context.Request.Path.StartsWithSegments("/Home/Index") ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Skills") ? "active" : "")"
                               asp-controller="Home" asp-action="Skills">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Education") ? "active" : "")"
                               asp-controller="Home" asp-action="Education">Education</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Experience") ? "active" : "")"
                               asp-controller="Home" asp-action="Experience">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Publications") ? "active" : "")"
                               asp-controller="Home" asp-action="Publications">Publications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Accomplishments") ? "active" : "")"
                               asp-controller="Home" asp-action="Accomplishments">Accomplishments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Projects") ? "active" : "")"
                               asp-controller="Home" asp-action="Projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Research") ? "active" : "")"
                               asp-controller="Home" asp-action="Research">Research</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home/Resume") ? "active" : "")"
                               asp-controller="Home" asp-action="Resume">Resume</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-warning btn-sm ms-3 shadow btn-liquid"
                               asp-controller="Home" asp-action="Contact">ðŸ“© Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content container-fluid px-3 px-md-4">
            <div class="content-box glass-card liquid-card mx-auto">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="glass-footer text-center py-3 mt-5">
            <div class="container">
                &copy; 2025 Md Julfiker Ali Jewel | <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a>
            </div>
        </footer>
    </div>

    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>

    <!-- Spinner hide: robust & safe -->
    <script>
    (function () {
      function hideSpinner() {
        var s = document.getElementById('loading-spinner');
        if (s) s.style.display = 'none';
      }
      document.addEventListener('DOMContentLoaded', hideSpinner);
      window.addEventListener('load', hideSpinner);
      setTimeout(hideSpinner, 2000); // final fallback
    })();
    </script>

    <!-- Particles (kept, with guard) -->
    <script>
    try {
      particlesJS("particles-js", {
        particles: {
          number: { value: 65 },
          size: { value: 2 },
          move: { speed: 1.1 },
          line_linked: { enable: true },
          color: { value: "#ffffff" }
        }
      });
    } catch (e) {
      console.warn("Particles init failed:", e);
    }
    </script>

    <!-- Typed.js (guarded) -->
    <script>
    (function () {
      var typedTarget = document.getElementById('typed');
      if (!typedTarget) return;
      try {
        var typed = new Typed('#typed', {
          strings: [
            'Software Programmer Analyst',
            'Cybersecurity & AI Researcher',
            'C#/.NET & SQL Developer',
            'Building Secure, Scalable Systems'
          ],
          typeSpeed: 60,
          backSpeed: 40,
          loop: true
        });
      } catch (e) {
        console.warn("Typed init failed:", e);
      }
    })();

    // Add subtle depth to navbar on scroll
    (function () {
      var nav = document.getElementById('mainNavbar');
      if (!nav) return;
      var last = 0;
      window.addEventListener('scroll', function () {
        var y = window.scrollY || document.documentElement.scrollTop;
        if (y > 8 && last <= 8) nav.classList.add('scrolled');
        else if (y <= 8 && last > 8) nav.classList.remove('scrolled');
        last = y;
      }, { passive: true });
    })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
