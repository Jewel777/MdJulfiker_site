<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Md Julfiker Ali Jewel Portfolio Website" />
    <title>@ViewData["Title"] - Md Julfiker Ali Jewel Portfolio</title>

    <!-- ðŸ”§ Early sanitizer: strip ?ac=... but keep any #hash -->
    <script>
    (function () {
      try {
        var url = new URL(window.location.href);
        if (url.searchParams.has('ac')) {
          url.searchParams.delete('ac');
          var cleaned = url.toString().replace(/\?$/, '');
          history.replaceState(null, '', cleaned);
        }
      } catch (e) { /* no-op */ }
    })();
    </script>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons / Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Poppins:wght@500&display=swap" rel="stylesheet" />

    <!-- Site CSS -->
    <link href="~/css/site.css?v=12" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <!-- JSON-LD (Razor @@ escapes) -->
    <script type="application/ld+json">
    {
      "@@context":"https://schema.org",
      "@@type":"Person",
      "name":"Md Julfiker Ali Jewel",
      "url":"https://www.mdjulfikeralijewel.com",
      "image":"https://www.mdjulfikeralijewel.com/images/Julfiker.jpg",
      "jobTitle":"Software Programmer Analyst",
      "worksFor":{"@@type":"Organization","name":"West Virginia Department of Health and Human Resources"},
      "sameAs":[
        "https://www.linkedin.com/in/md-julfiker-ali-jewel-7b1442a9/",
        "https://x.com/JewelShaikh2",
        "https://github.com/Jewel777",
        "https://www.youtube.com/@@nongor3694",
        "https://scholar.google.com/citations?user=KYHGDlgAAAAJ",
        "https://orcid.org/0009-0004-8799-8957"
      ]
    }
    </script>

    @RenderSection("Styles", required: false)
</head>

