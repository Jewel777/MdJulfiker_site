<style>
    :root{
        --card-edge: rgba(255,106,0,.45);
        --text-65: rgba(238,238,238,.75);
        --accent1: #ffae38;
        --accent2: #ff6a00;
    }
    body { background-color: #121212; }
    .page-title{ letter-spacing:.3px; }

    .glass{
        background: linear-gradient(180deg, rgba(34,40,49,.80), rgba(34,40,49,.96));
        backdrop-filter: blur(6px);
    }
    .border-gradient{
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,.08);
        box-shadow: 0 6px 24px rgba(0,0,0,.35), 0 0 0 1px rgba(255,255,255,.04) inset, 0 0 24px var(--card-edge);
        padding: 18px; /* tighter */
        transition: transform .25s ease, box-shadow .25s ease;
        will-change: transform, box-shadow;
    }
    .border-gradient:hover{
        transform: translateY(-2px);
        box-shadow: 0 10px 24px rgba(0,0,0,.45), 0 0 0 1px rgba(255,255,255,.06) inset, 0 0 34px var(--card-edge);
    }

    .link-highlight{ color: var(--accent1); text-decoration: underline; text-underline-offset: 2px; }
    .text-light-65{ color: var(--text-65); }
    .border-top-soft{ border-top: 1px solid rgba(255,255,255,.09); }

    /* Gradient keyword headings */
    .section-title-gradient{
        font-size: .95rem;        /* bigger, per request */
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .55px;
        margin-bottom: .25rem;    /* tighter */
        background: linear-gradient(90deg, var(--accent1), var(--accent2));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Chips — lighter */
    .chips .chip{
        display:inline-block;
        font-size:.72rem;
        color: var(--accent1);
        border:1px solid var(--accent1);
        background:transparent;
        border-radius:999px;
        padding:.18rem .55rem;
        font-weight:600;
        margin-left:.25rem;
    }

    /* Tighter text and list spacing overall */
    .edu-card p{ margin-bottom:.30rem; }
    .tight-list li{ margin-bottom:.22rem; }

    /* Course lists: dense grid, mobile->1col, md+->2col */
    .course-grid{
        display:grid;
        grid-template-columns: 1fr;
        gap: 4px 24px;
        padding-left: 18px; /* bullet indent */
    }
    @@media (min-width: 768px){
        .course-grid{ grid-template-columns: 1fr 1fr; }
    }

    /* Slim divider */
    .divider{
        border:0;
        height:1px;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,.10), transparent);
    }
</style>
