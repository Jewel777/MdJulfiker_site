<!-- ðŸ”§ Custom CSS (scoped to this page) -->
<style>
    .skill-card, .certificate-badge {
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s ease;
    }
    .skill-card.show, .certificate-badge.show {
        opacity: 1;
        transform: translateY(0);
    }
    .skill-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .skill-card:hover {
        transform: scale(1.03);
        background: rgba(255, 255, 255, 0.08);
        box-shadow: 0 8px 24px rgba(255, 255, 255, 0.1);
    }
    .skill-card h5 i { margin-right: 10px; }

    .certificate-badge {
        max-width: 150px;
        border-radius: 12px;
        transition: transform 0.4s ease;
    }
    .certificate-badge:hover { transform: scale(1.1); }

    /* Fade Up Animation */
    .fade-up {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    .appear {
        opacity: 1;
        transform: translateY(0);
    }

    /* Make progress bar labels readable on yellow/orange backgrounds */
    .progress .progress-bar {
        color: #121212;      /* dark text for contrast */
        font-weight: 600;
    }
</style>

<!-- ðŸ§  Scroll & Progress Animation Script -->
<script>
    // Animate "fade-up" sections into view
    const faders = document.querySelectorAll('.fade-up');
    const elements = document.querySelectorAll('.skill-card, .certificate-badge');

    const appearOptions = { threshold: 0.1, rootMargin: "0px 0px -100px 0px" };
    const appearOnScroll = new IntersectionObserver(function(entries, observer) {
        entries.forEach(entry => {
            if (!entry.isIntersecting) return;
            entry.target.classList.add('appear');
            observer.unobserve(entry.target);
        });
    }, appearOptions);

    faders.forEach(fader => appearOnScroll.observe(fader));

    // Reveal cards/badges with staggered animation
    function revealOnScroll() {
        const windowHeight = window.innerHeight;
        elements.forEach((el, index) => {
            const top = el.getBoundingClientRect().top;
            if (top < windowHeight - 50) {
                setTimeout(() => el.classList.add('show'), index * 150);
            }
        });
    }
    window.addEventListener('scroll', revealOnScroll);
    window.addEventListener('load', revealOnScroll);

    // Animate progress bars to their data-width values
    document.addEventListener('DOMContentLoaded', function () {
        const progressBars = document.querySelectorAll('.progress-bar');
        progressBars.forEach(bar => {
            const width = bar.getAttribute('data-width');
            setTimeout(() => { bar.style.width = width; }, 500);
        });
    });
</script>
