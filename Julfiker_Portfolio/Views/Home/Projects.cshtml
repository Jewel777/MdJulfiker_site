  .project-title {
    margin: 0;
    font-weight: 700;
    color: #eaeaea;
    letter-spacing: .2px;
    transform: translateZ(25px);
  }

  .project-desc {
    margin: 8px 0 10px;
    color: rgba(255, 255, 255, 0.78);
    transform: translateZ(15px);
  }

  .project-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    transform: translateZ(10px);
  }

  .badge-soft {
    display: inline-block;
    padding: 6px 10px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.09);
    border: 1px solid rgba(255, 255, 255, 0.14);
    color: rgba(255, 255, 255, 0.92);
    font-size: .85rem;
    line-height: 1;
    user-select: none;
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }

  /* Cursor-follow glare */
  .project-glare {
    pointer-events: none;
    position: absolute;
    inset: -1px;
    border-radius: inherit;
    background: radial-gradient(600px 200px at var(--mx,50%) var(--my,50%), rgba(255,255,255,.22), transparent 50%);
    opacity: 0;
    transition: opacity .2s ease;
    mix-blend-mode: screen;
    transform: translateZ(50px);
  }
  .project-card:hover .project-glare { opacity: 1; }

  /* Colored reflection underneath */
  .project-reflection {
    pointer-events: none;
    position: relative;
    height: 16px;
    margin-top: 8px;
    filter: blur(8px);
    background: radial-gradient(50% 100% at 50% 0%, color-mix(in oklab, var(--accent) 55%, transparent), transparent 70%);
    opacity: .9;
  }

  /* Accessibility / motion safety */
  @@media (prefers-reduced-motion: reduce) {
    .project-card { transition: none !important; }
    .project-glare { display: none !important; }
  }

  @@media (min-width: 768px) {
    .project-card { padding: 22px 24px; }
  }
</style>

<script>
  (function () {
    const isTouch = matchMedia('(pointer: coarse)').matches;
    const reduceMotion = matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (isTouch || reduceMotion) return; // disable 3D on touch / reduced motion

    const MAX_TILT = 10; // degrees
    const ENTER_SCALE = 1.03;

    document.querySelectorAll('.project-tilt').forEach(wrapper => {
      const card = wrapper.querySelector('.project-card');
      const glare = card.querySelector('.project-glare');
      const accent = wrapper.getAttribute('data-accent') || '#65d1ff';

      // expose accent to CSS
      wrapper.style.setProperty('--accent', accent);

      let raf = null;

      function update(e) {
        const rect = card.getBoundingClientRect();
        const cx = rect.left + rect.width / 2;
        const cy = rect.top + rect.height / 2;
        const x = (e.clientX - cx) / (rect.width / 2);
        const y = (e.clientY - cy) / (rect.height / 2);
        const rotY = x * MAX_TILT;    // left/right
        const rotX = -y * MAX_TILT;   // up/down

        card.style.transform =
          `perspective(900px) rotateX(${rotX}deg) rotateY(${rotY}deg) scale(${ENTER_SCALE})`;

        if (glare) {
          const mx = ((e.clientX - rect.left) / rect.width) * 100;
          const my = ((e.clientY - rect.top) / rect.height) * 100;
          glare.style.setProperty('--mx', mx + '%');
          glare.style.setProperty('--my', my + '%');
        }
        raf = null;
      }

      function onMove(e) {
        if (raf) return;
        raf = requestAnimationFrame(() => update(e));
      }

      function onLeave() {
        card.style.transform =
          'perspective(900px) rotateX(0deg) rotateY(0deg) scale(1)';
      }

      card.addEventListener('mousemove', onMove);
      card.addEventListener('mouseenter', () => {
        card.style.transition = 'transform .15s ease';
        // brief timeout to allow scale-up to feel snappy
        setTimeout(() => (card.style.transition = ''), 160);
      });
      card.addEventListener('mouseleave', onLeave);
    });
  })();
</script>
