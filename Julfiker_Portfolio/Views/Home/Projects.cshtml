<style>
  .project-stack {
    display: grid;
    grid-template-columns: 1fr;
    gap: 18px;
  }

  .project-tilt {
    position: relative;
    --accent: #65d1ff; /* overridden per card */
    --glass: rgba(255,255,255,0.06);
    --glass-strong: rgba(255,255,255,0.075);
    --hairline: rgba(255,255,255,0.08);
    --hairline-strong: rgba(255,255,255,0.16);
  }

  .project-card {
    position: relative;
    background: var(--glass);
    backdrop-filter: saturate(140%) blur(14px);
    -webkit-backdrop-filter: saturate(140%) blur(14px);
    border: 1px solid var(--hairline);
    border-radius: 20px;
    padding: 20px 22px;
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
    transform: perspective(900px) rotateX(0deg) rotateY(0deg) translateZ(0);
    transform-style: preserve-3d;
    transition: transform .2s ease, box-shadow .25s ease, border-color .25s ease, background .25s ease;
    will-change: transform;
    outline: none;
  }
  .project-card:hover,
  .project-card:focus-visible {
    background: var(--glass-strong);
    border-color: var(--hairline-strong);
    box-shadow: 0 18px 44px rgba(0, 0, 0, 0.45);
  }

  .project-head {
    display: flex; align-items: center; gap: 12px; margin-bottom: 6px;
  }
  .project-logo {
    width: 42px; height: 42px; display: grid; place-items: center;
    border-radius: 12px;
    background: radial-gradient(60% 60% at 30% 30%, rgba(255,255,255,.2), rgba(255,255,255,.05) 60%, transparent 100%),
                linear-gradient(135deg, rgba(255,255,255,.12), rgba(255,255,255,.02));
    border: 1px solid rgba(255,255,255,0.12);
    transform: translateZ(30px);
  }
  .project-logo.icon i { font-size: 1.25rem; color: #eaeaea; }
  .project-logo.emoji { font-size: 1.3rem; }

  .project-title { margin: 0; font-weight: 700; color: #eaeaea; letter-spacing: .2px; transform: translateZ(25px); }
  .project-desc  { margin: 8px 0 10px; color: rgba(255,255,255,0.78); transform: translateZ(15px); }
  .project-meta  { display: flex; flex-wrap: wrap; gap: 8px; transform: translateZ(10px); }

  .badge-soft {
    display: inline-block; padding: 6px 10px; border-radius: 999px;
    background: rgba(255,255,255,0.09);
    border: 1px solid rgba(255,255,255,0.14);
    color: rgba(255,255,255,0.92);
    font-size: .85rem; line-height: 1; user-select: none;
    backdrop-filter: blur(6px); -webkit-backdrop-filter: blur(6px);
  }

  /* Cursor-follow glare */
  .project-glare {
    pointer-events: none; position: absolute; inset: -1px; border-radius: inherit;
    background: radial-gradient(600px 200px at var(--mx,50%) var(--my,50%), rgba(255,255,255,.22), transparent 50%);
    opacity: 0; transition: opacity .2s ease; mix-blend-mode: screen; transform: translateZ(50px);
  }
  .project-card:hover .project-glare,
  .project-card:focus-visible .project-glare { opacity: 1; }

  /* Colored reflection (simple, Safari-friendly) */
  .project-reflection {
    pointer-events: none; position: relative; height: 16px; margin-top: 8px; filter: blur(8px);
    background: radial-gradient(50% 100% at 50% 0%, var(--accent), transparent 70%);
    opacity: .6;
  }

  /* Motion/Touch safety */
  @@media (prefers-reduced-motion: reduce) {
    .project-card { transition: none !important; }
    .project-glare { display: none !important; }
  }
  @@media (min-width: 768px) { .project-card { padding: 22px 24px; } }
</style>

<script>
  (function () {
    const isTouch = matchMedia('(pointer: coarse)').matches;
    const reduceMotion = matchMedia('(prefers-reduced-motion: reduce)').matches;

    document.querySelectorAll('.project-tilt').forEach(wrapper => {
      const card  = wrapper.querySelector('.project-card');
      const glare = card.querySelector('.project-glare');
      const accent = wrapper.getAttribute('data-accent') || '#65d1ff';

      // feed accent into CSS var
      wrapper.style.setProperty('--accent', accent);

      // Skip 3D on touch devices / reduced motion
      if (isTouch || reduceMotion) return;

      const MAX_TILT = 10;  // degrees
      const ENTER_SCALE = 1.03;
      let raf = null;

      function update(e) {
        const r = card.getBoundingClientRect();
        const cx = r.left + r.width / 2;
        const cy = r.top  + r.height / 2;
        const x = (e.clientX - cx) / (r.width  / 2);
        const y = (e.clientY - cy) / (r.height / 2);
        const rotY = x * MAX_TILT;
        const rotX = -y * MAX_TILT;

        card.style.transform = `perspective(900px) rotateX(${rotX}deg) rotateY(${rotY}deg) scale(${ENTER_SCALE})`;

        if (glare) {
          const mx = ((e.clientX - r.left) / r.width)  * 100;
          const my = ((e.clientY - r.top)  / r.height) * 100;
          glare.style.setProperty('--mx', mx + '%');
          glare.style.setProperty('--my', my + '%');
        }
        raf = null;
      }

      function onMove(e){ if (!raf) raf = requestAnimationFrame(() => update(e)); }
      function onLeave(){ card.style.transform = 'perspective(900px) rotateX(0deg) rotateY(0deg) scale(1)'; }

      card.addEventListener('mousemove', onMove);
      card.addEventListener('mouseenter', () => {
        card.style.transition = 'transform .15s ease';
        setTimeout(() => (card.style.transition = ''), 160);
      });
      card.addEventListener('mouseleave', onLeave);
    });
  })();
</script>
